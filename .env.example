# OpenRAG Configuration

# ChromaDB Settings
CHROMA_DB_PATH=./chroma_db

# Embedding Model
# Options: all-MiniLM-L6-v2 (fast), all-mpnet-base-v2 (recommended), instructor-xl (advanced)
EMBEDDING_MODEL=all-mpnet-base-v2

# Chunking Configuration
CHUNK_SIZE=400
CHUNK_OVERLAP=60

# Contextual RAG (optional)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CONTEXT_MODEL=llama3.2:3b

# Graph RAG (optional)
GRAPH_ENABLED=true
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=test_graph 

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO


